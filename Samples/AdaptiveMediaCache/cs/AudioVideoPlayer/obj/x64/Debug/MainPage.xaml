<Page 
    x:Class="AudioVideoPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioVideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:ConnectionId='1' x:Name="gridmain" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="5,5,5,5" >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="wideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="530" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridMedia.(Grid.Column)" Value="1"/>
                        <Setter Target="GridMedia.(Grid.Row)" Value="0"/>
                        <Setter Target="GridMedia.(Grid.RowSpan)" Value="2"/>
                        <Setter Target="GridMedia.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="TitlePanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="TitlePanel.(Grid.RowSpan)" Value="1"></Setter>
                        <Setter Target="TitlePanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="TitlePanel.(Grid.ColumnSpan)" Value="1"></Setter>
                        <!--
                        <Setter Target="TitlePanel.Grid.Row" Value="0"/>
                        <Setter Target="TitlePanel.Grid.RowSpan" Value="1"/>
                        <Setter Target="TitlePanel.Grid.Column" Value="0"/>
                        <Setter Target="TitlePanel.Grid.ColumnSpan" Value="2"/>
                        -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="narrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="GridMedia.(Grid.Column)" Value="0"/>
                        <Setter Target="GridMedia.(Grid.Row)" Value="1"/>
                        <Setter Target="GridMedia.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="GridMedia.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="TitlePanel.(Grid.Row)" Value="0"></Setter>
                        <Setter Target="TitlePanel.(Grid.RowSpan)" Value="1"></Setter>
                        <Setter Target="TitlePanel.(Grid.Column)" Value="0"></Setter>
                        <Setter Target="TitlePanel.(Grid.ColumnSpan)" Value="2"></Setter>
                        <!--
                        <Setter Target="TitlePanel.Grid.Row" Value="0"/>
                        <Setter Target="TitlePanel.Grid.RowSpan" Value="1"/>
                        <Setter Target="TitlePanel.Grid.Column" Value="0"/>
                        <Setter Target="TitlePanel.Grid.ColumnSpan" Value="1"/>
                        -->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="310"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:ConnectionId='4' x:Name="TitlePanel" Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2"  >
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
            <Button x:ConnectionId='37' IsEnabled="True" ToolTipService.ToolTip="Open anotherJSON playlist on the disk" Content="&#xEA37;" x:Name="playlistButton" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                       />
            <Image x:ConnectionId='38' x:Name="TestLogo" Source="Assets/AudioVideo.png" VerticalAlignment="Center" Margin="3,3,3,3" Stretch="Fill" Width="40" Height="40" />
            <TextBlock x:ConnectionId='39' x:Name="TestTitle" VerticalAlignment="Center" TextWrapping="Wrap">Windows 10 Universal Media Player Test</TextBlock>
        </StackPanel>
        <StackPanel x:ConnectionId='10' x:Name="ButtonPanel" VerticalAlignment="Top"  >
                <StackPanel>
                 <TextBlock x:ConnectionId='33' x:Name="labelStream"  Text="Select a stream:" HorizontalAlignment="Left" />
                <ComboBox x:ConnectionId='34'  x:Name="comboStream" ToolTipService.ToolTip="Title of the current selected stream"    HorizontalAlignment="Stretch" ItemsSource="{Binding}" IsTabStop="True"  >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"   >
                                <TextBlock Text="{Binding Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock x:ConnectionId='35' x:Name="labelUri" Text="URL:" HorizontalAlignment="Left" />
                <TextBox x:ConnectionId='36' x:Name="mediaUri" ToolTipService.ToolTip="Uri of the current selected stream (edit)" IsTabStop="True"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                <Button x:ConnectionId='26' IsEnabled="False" Content="&#xE892;" x:Name="minusButton" ToolTipService.ToolTip="Select the previous stream in the playlist" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                    />
                <Button x:ConnectionId='27' IsEnabled="False" Content="&#xE893;" x:Name="plusButton" ToolTipService.ToolTip="Select the next stream in the playlist" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                   />
                <Button x:ConnectionId='28' IsEnabled="False" Content="&#xE740;" x:Name="fullscreenButton" ToolTipService.ToolTip="Switch to full screen resolution with transport control" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                          />
                <Button x:ConnectionId='29' IsEnabled="False" Content="&#xE158;" x:Name="fullwindowButton" ToolTipService.ToolTip="Switch to full window resolution without transport control" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                          />
                <Button x:ConnectionId='30' IsEnabled="False" Content="&#xE74F;" x:Name="muteButton" ToolTipService.ToolTip="Mute the audio" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                    />
                <Button x:ConnectionId='31' IsEnabled="False" Content="&#xE767;" x:Name="volumeUpButton" ToolTipService.ToolTip="Volume up" FontFamily="Segoe MDL2 Assets" FontSize="20" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                        />
                <Button x:ConnectionId='32' IsEnabled="False" Content="&#xE767;" x:Name="volumeDownButton" ToolTipService.ToolTip="Volume down"  FontFamily="Segoe MDL2 Assets" FontSize="10" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                          />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                <Button x:ConnectionId='20' IsEnabled="False" Content="&#xE768;" x:Name="playButton" ToolTipService.ToolTip="Open the current stream Uri to be played in streaming mode"  FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                   />
                <Button x:ConnectionId='21' IsEnabled="False" Content="&#xE768;" x:Name="playPauseButton" ToolTipService.ToolTip="Pause the stream currently played by the MediaElement"  FontFamily="Segoe MDL2 Assets" FontSize="10" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                        />
                <Button x:ConnectionId='22' IsEnabled="False" Content="&#xE769;" x:Name="pausePlayButton" ToolTipService.ToolTip="Resume the stream currently puased by the MediaElement"   FontFamily="Segoe MDL2 Assets" FontSize="10" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                        />
                <Button x:ConnectionId='23' IsEnabled="False" Content="&#xE71A;" x:Name="stopButton" ToolTipService.ToolTip="Stop the stream currently played by the MediaElement"   FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                   />
                <Image x:ConnectionId='24' x:Name="streamLogo" Width="40" Height="40" VerticalAlignment="Center" Margin="1,1,1,1" />
                <CheckBox x:ConnectionId='25' VerticalAlignment="Center" x:Name="AutoSkip"                                                           ToolTipService.ToolTip="Select automically the next stream at the end of the MediaElement"   FlowDirection="RightToLeft" HorizontalAlignment="Left" Margin="-55,0,0,0" Content="Auto:"  />
                </StackPanel>
                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                <CheckBox x:ConnectionId='17' VerticalAlignment="Center" x:Name="DownloadToGoCheckBox" ToolTipService.ToolTip="Select either the DownloadToGo or the ProgressiveDownload experience"   FlowDirection="RightToLeft" HorizontalAlignment="Left" Margin="-60,0,0,0" Content="DTG:"  />
                <TextBlock VerticalAlignment="Center" Margin="5,0,5,0"  FontSize="12">Bitrate Min:</TextBlock>
                <TextBox x:ConnectionId='18' x:Name="minBitrate" VerticalAlignment="Center" ToolTipService.ToolTip="Minimum bitrate in bit/s"   MinWidth="60" IsTabStop="True" InputScope="Number"                                  FontSize="12"/>
                <TextBlock VerticalAlignment="Center" Margin="5,0,5,0" FontSize="12">Max:</TextBlock>
                <TextBox x:ConnectionId='19' x:Name="maxBitrate" VerticalAlignment="Center" ToolTipService.ToolTip="Maximum bitrate in bit/s, (if value = 0, no maximum)" MinWidth="60" IsTabStop="True"  InputScope="Number"                                   FontSize="12"  />
            </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                <Button x:ConnectionId='11' IsEnabled="False" Content="&#xE896;" x:Name="downloadButton" ToolTipService.ToolTip="Download the current stream selecting the highest video bitrate in the bitrate range" FontFamily="Segoe MDL2 Assets"  IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                       />
                <Button x:ConnectionId='12' IsEnabled="False" Content="&#xE894;" x:Name="removeButton" ToolTipService.ToolTip="Remove the stream already partially or completely stored on disk" FontFamily="Segoe MDL2 Assets"  IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                     />
                <Button x:ConnectionId='13' IsEnabled="False" Content="&#xE769;" x:Name="pauseDownloadButton" ToolTipService.ToolTip="Pause the download" FontFamily="Segoe MDL2 Assets" FontSize="10"  IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                            />
                <Button x:ConnectionId='14' IsEnabled="False" Content="&#xE896;" x:Name="resumeDownloadButton" ToolTipService.ToolTip="Resume the download"  FontFamily="Segoe MDL2 Assets" FontSize="10" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                             />
                <Button x:ConnectionId='15' IsEnabled="False" Content="&#xE8D7;" x:Name="playReadyButton" ToolTipService.ToolTip="If the stream is protected, acquire the PlayReady license" FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                        />
                <Button x:ConnectionId='16' IsEnabled="False" Content="&#xE768;" x:Name="playLocalButton" ToolTipService.ToolTip="Play the current stream from the disk (no streaming from the server, the application can be offline)"  FontFamily="Segoe MDL2 Assets" IsTabStop="True" Height="40" Width="40" Margin="1,1,1,1"                        />
            </StackPanel>
        </StackPanel>

        <Grid x:ConnectionId='5' x:Name="GridMedia"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" >
                <Image x:ConnectionId='7' x:Name="backgroundVideo"  Source="Assets/Screen169.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"></Image>
                <MediaElement x:ConnectionId='8' x:Name="mediaElement" AutoPlay="True" AreTransportControlsEnabled="False"   HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"   />
                <Image x:ConnectionId='9' x:Name="pictureElement"  Source="Assets/Screen169.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"></Image>
            </Grid>
        <TextBox x:ConnectionId='6'  x:Name="logs" Grid.Row="2" Grid.ColumnSpan="2" IsTabStop="True" Margin="2,2,2,2"   MaxHeight="640" MinHeight="100"  ScrollViewer.HorizontalScrollBarVisibility="Auto"  ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="NoWrap" AcceptsReturn="True" FontSize="12" IsReadOnly="True"  Visibility="Visible" Text="" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
        </TextBox>
    </Grid>


</Page>

